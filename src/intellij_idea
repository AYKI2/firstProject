CREATE TABLE mentor(
    id SERIAL PRIMARY KEY,
    "name" VARCHAR(50),
    "group" VARCHAR(25)
);
INSERT INTO mentor("name","group")
VALUES ('Rahim','Java'),
       ('Nuradil','Python'),
       ('Ilim','JS');
SELECT * from mentor;

CREATE TABLE instructor(
    id SERIAL PRIMARY KEY,
    "name" VARCHAR(50),
    "group" VARCHAR(25)
);
INSERT INTO instructor("name","group")
VALUES ('Aijamal','Java'),
       ('Iskhak','Python'),
       ('Alibek','JS');
SELECT * from instructor;

CREATE TABLE course(
    id SERIAL PRIMARY KEY,
    course_name VARCHAR(50),
    specialty VARCHAR(25),
    instructor_id INTEGER,
    mentor_id INTEGER,
    FOREIGN KEY (instructor_id) REFERENCES instructor(id),
    FOREIGN KEY (mentor_id) REFERENCES mentor(id)
);
INSERT INTO course(course_name, specialty, instructor_id, mentor_id)
VALUES ('Peaksoft','Backend',1,1),
       ('Makers','Cyber-security',2,2),
       ('DevX','Frontend',3,3);
SELECT * from course;

CREATE TABLE student(
    id SERIAL PRIMARY KEY,
    first_name VARCHAR(50),
    last_name VARCHAR(50),
    age INTEGER NOT NULL,
    course_id INTEGER,
    FOREIGN KEY(course_id) REFERENCES course(id)
);
INSERT INTO student(first_name,last_name,age,course_id)
VALUES ('Iskhak','Abdukhamitov',20,1),
       ('Ilim','Shabdanov',18,2),
       ('Alibek','Altynbek Uulu',20,3);
SELECT * from student;

CREATE TABLE subject(
    id SERIAL PRIMARY KEY,
    "name" VARCHAR(50) UNIQUE
);
INSERT INTO subject("name")
VALUES ('History'),
       ('Mathematics'),
       ('Biology'),
       ('Technology'),
       ('Science');
SELECT * from subject;

CREATE TABLE teacher(
    id SERIAL PRIMARY KEY,
    first_name VARCHAR(50),
    last_name VARCHAR(50),
    email VARCHAR(50) UNIQUE,
    subject_name VARCHAR(50),
    FOREIGN KEY (subject_name) REFERENCES subject("name")
);
INSERT INTO teacher(first_name,last_name,email,subject_name)
VALUES ('Iskhak','Abdukhamitov','I@gmail.com','History'),
       ('Alibek','Altynbek Uulu','A@gmail.com','Mathematics'),
       ('Ilim','Shabdanov','S@gmail.com','Science'),
       ('Azamat','Kamalov','K@gmail.com','Technology'),
       ('Mukhammed','Islambekov','M@gmail.com','Biology');
SELECT * from teacher;

CREATE TABLE classroom(
    id SERIAL PRIMARY KEY,
    number INTEGER,
    lesson VARCHAR(50),
    capacity INTEGER,
    FOREIGN KEY (lesson) REFERENCES subject("name")
);
INSERT INTO classroom(number,lesson,capacity)
VALUES (12,'History',30),
       (9,'Science',40),
       (3,'Biology',25),
       (5,'Technology',50),
       (7,'Mathematics',20);
SELECT * from classroom;

CREATE TABLE school(
    id SERIAL PRIMARY KEY,
    "name" VARCHAR(50),
    teachers INTEGER,
    "location" VARCHAR(50),
    FOREIGN KEY (teachers) REFERENCES teacher(id)
);
INSERT INTO school("name",teachers,"location")
VALUES ('Rugby Schoo',1,'United Kingdom'),
       ('Bishop Montgomery High School',3,'USA'),
       ('Lake Forest Academy',5,'USA'),
       ('Tilton School',2,'USA'),
       ('Appleby College',4,'Canada');
SELECT * from school;

CREATE TABLE type(
    id SERIAL PRIMARY KEY,
    "name" VARCHAR(50) UNIQUE
);
INSERT INTO type("name")
VALUES ('multi-storey building'),
       ('Skyscraper'),
       ('A penthouse'),
       ('Tower block'),
       ('Detached house');
SELECT * from type;

CREATE TABLE building(
    id SERIAL PRIMARY KEY,
    "name" VARCHAR(50) ,
    "building_type" VARCHAR(50),
    capacity INTEGER,
    FOREIGN KEY (building_type) REFERENCES type("name")
);
INSERT INTO building("name",building_type,capacity)
VALUES ('Дом Шрёдер','Skyscraper',123),
       ('Эйлин Грей','A penthouse',456),
       ('Вилла Тугендхат','Tower block',789),
       ('Савой','Detached house',1234),
       ('Кавруа','multi-storey building',45678);
SELECT * from building;